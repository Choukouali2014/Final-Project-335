<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Signin Page</title>
    <!-- Favicons -->
<meta name="theme-color" content="#712cf9">
    <!-- Custom styles for this template -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
   
  </head>
  <body class="text-center">
   
<main class="form-signin w-100 m-auto">
    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
            Your Email Address or password is incorrect!<br>
            <a href="/register" class="w-100 btn btn-lg btn-secondary" >Register Here</a> 
        </div>
    <% } %>
   
  <form method="post" action=<%= host %> >
    <img class="mb-4" src=<%= error %> alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating" >
      <input type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com" value=<%= (locals.email) ? email : '' %>>
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" value=<%= (locals.password) ? password : '' %>>
      <label for="floatingPassword">Password</label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    <a href="/register" class="w-100 btn btn-lg btn-secondary" >Register</a>
  </form>
</main>
  </body>
</html>