<!doctype html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Search Country Page</title>
    <meta name="theme-color" content="#712cf9">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/homepage.css">
    <link rel="stylesheet" href="/custom.css">
  </head>
  <body class="d-flex h-100 text-center text-bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
          <div>
            <h3 class="float-md-start mb-0">World Map Quiz</h3>
            <nav class="nav nav-masthead justify-content-center float-md-end">
              <a class="nav-link fw-bold py-1 px-0" href="/homepage">Home</a>
              <a class="nav-link fw-bold py-1 px-0" href="/LeaderBoard">LeaderBoard</a>
              <a class="nav-link fw-bold py-1 px-0" href="/viewCountries">View Countries</a>
              <a class="nav-link fw-bold py-1 px-0 active" aria-current="page" href="/search">Search</a>
              <a class="nav-link fw-bold py-1 px-0" href="/logout">Logout</a>
            </nav>
          </div>
        </header>
      
        <main class="px-3">
            <form action="/searchQuery" method="get">
              <input type="text" class="form-control interline" name="countryName" placeholder="" >
              <button class="w-100 btn btn-lg btn-primary" type="submit">Search</button>
            </form>
            <div class="separate">

            </div>
            <% if (not_found) { %>
              <div>
                  <img src=<%- src %> alt="">
              </div>
              <div>
                <%- answer %>
            </div>
          <% }else if(message !== "") { %>
            <div class="alert alert-danger" role="alert">
              <%- message %><br>
          </div>
          <% } %>
        </main>
        <footer class="mt-auto text-white-50">
        </footer>
    </div>
  </body>
</html>